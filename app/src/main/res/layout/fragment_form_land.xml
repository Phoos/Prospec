<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_land_tab1"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <!--Control-->
    <ScrollView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Form เอกสารสิทธิฺ-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <!--ประเภทเอกสารสิทธิ์-->
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:text="@string/type_doc1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinner_type_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--เลขที่เอกสารสิทธิ์-->
           <LinearLayout
               android:layout_marginTop="16dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <!--Title-->
               <TextView
                   android:textStyle="bold"
                   android:textSize="@dimen/h2"
                   android:text="@string/nidex_doc"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <!--TextField-->
               <EditText
                   android:layout_marginLeft="16dp"
                   android:textColorHighlight="@color/colorPrimaryDark"
                   android:hint="@string/not_null"
                   android:inputType="text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

           </LinearLayout>

            <!--เลขที่ดิน-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Title-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/num_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextField-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <!--ระวาง-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Title-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/ravang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextField-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
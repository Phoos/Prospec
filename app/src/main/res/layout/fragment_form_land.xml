<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_land_tab1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <!--Content-->
    <ScrollView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--From-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--จำนวนเอกสารสิทธิ์-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h1"
                    android:text="@string/num_titledeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--TextFiled-->
                    <EditText
                        android:layout_marginLeft="16dp"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:hint="@string/not_null"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!--หน่วย-->
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/h2"
                        android:text="@string/unit_titledeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <!--ประเภทเอกสารสิทธิ์-->
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/h2"
                android:text="@string/type_doc_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/spinner_type_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--เลขที่เอกสารสิทธิ์-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/index_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--เลขที่ดิน-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/num_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--ระวาง-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/rawang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--หน้าสพรวจ-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/index_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--หน้าที่-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/num_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--เล่มที่-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/book_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--เนื้อที่ดิน-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tile-->
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/h2"
                    android:text="@string/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TextFiled-->
                <EditText
                    android:layout_marginLeft="16dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:hint="@string/not_null"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
